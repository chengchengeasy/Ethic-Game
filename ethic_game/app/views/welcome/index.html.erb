
<div class="jumbotron text-center" style="margin-bottom:0">
    
    <h1 class="display-4 header-text">Welcome to the Ethics Game!</h1>
    
</div>


    <% @scenarios.each do |scenario| %> 
        <div class="row" style="background:transparent url('/assets/village.jpg') no-repeat center /cover">>
            <div class="col-2"></div>
            <div class="col-8 text-center">
                <button type="button" class = "btn btn-light" style="background-color: rgba(245, 245, 245, 0.6)" >
                    <h1 class="pt-4 pb-4 display-5 header-text">
                        <%#= link_to "#{scenario.title}", detail_path(scenario)%>
                        <%= link_to "Start game", detail_path(scenario)%>
                    </h1>
                </button>
            </div>
            <div class="col-2"></div>
        </div>
    <% end%>
    
